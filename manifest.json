{
    "manifest_version": 3,
    "name": "Kenyan Law Search",
    "version": "1.0",
    "description": "Search Kenyan law and receive daily constitutional updates.",
    "permissions": ["storage", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "48.png",
        "128": "128.png"
      }
    },
    "icons": {
      "48": "48.png",
      "128": "128.png"
    }
  }